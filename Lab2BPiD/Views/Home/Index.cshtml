<!DOCTYPE html>
<html>
<head>
    <title>Chat-room</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/jsencrypt.min.js"></script>

    <h2 align="center" style="color: #555555;">Chat</h2>

    <div class="main">
        <div id="loginBlock">
            <p align="center" style="color: #555555;">Enter your login:</p><br />
            <input id="txtUserName" type="text" />
            <div style="text-align: center; margin-top: 3%">
                <input id="btnLogin" type="button" value="Go" />
            </div>
        </div>
        <div id="chatBody">
            <div id="header"></div>
            <div id="inputForm">
                <input type="text" id="message" />
                <div style="text-align: center; margin-top: 5%">
                    <input type="button" id="sendmessage" value="Send" />
                </div>
            </div>
            <div id="box">
                <div id="chatroom"></div>

                <div id="chatusers">
                    <p align="center" style="color: #555555; font-size: 14pt"><b>Users:</b></p>
                </div>
            </div>
        </div>
        <input id="hdId" type="hidden" />
        <input id="username" type="hidden" />
    </div>
    <script src="~/Scripts/jsbn.js"></script>
    <script src="~/Scripts/jsbn2.js"></script>
    <script src="~/Scripts/rsa.js"></script>
    <script src="~/Scripts/rng.js"></script>
    <script src="~/Scripts/util.js"></script>

</body>
</html>